<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header'); %>
  <body class="bg-light">
    <%- include('./partials/nav'); %>
    <div class="container max-width: 800px;">
      <br />
      <div class="row justify-content-center">
        <div class="col-auto">
          <br />
          <i
            class="bi bi-person-add text-success"
            style="font-size: 100px"
          ></i>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-auto"><p class="fs-2 text">Patient Details</p></div>
      </div>
      <div class="row">
        <div class="col-12">
          <table class="table table-striped">
            <thead class="table-dark">
              <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Age</th>
                <th scope="col">Gender</th>
                <th scope="col">Phone</th>
                <th scope="col">Email</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<patients.length; i++) {%>
                    <tr>
                        <td scope = "row"><%= patients[i].firstName %></td>
                        <td><%= patients[i].lastName %></td>
                        <td><%= new Date().getYear() - patients[i].dateOfBirth.getYear() %></td>
                        <td><%= patients[i].gender %></td>
                        <td><%= patients[i].phoneNumber %></td>
                        <td><%= patients[i].email %></td>
                        <td>
                            <a
                              href="/patients/<%= patients[i]._id%>"
                              class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                              >View</a
                            >
                        </td>
                        <td>
                            <a
                              href="/patients/<%= patients[i]._id%>/edit"
                              class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                              >Edit</a
                            >
                        </td>
                    </tr>
                 <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!-- Footer -->
    <%- include('./partials/footer'); %>
    <!-- Boot Strap Scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
