<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/header'); %>
    <body>
        <div class="container align-items-center">
            <!-- Logo And Heading -->
            <div class="row justify-content-center ">
                <div class="col-4 ">
                    <img
                        src="../assets/img1.png"
                        alt="logo"
                        class="img-fluid"
                        style="max-width: 180px"
                    />
                </div>
                <div class="col-8  text-end">
                    <br/>
                    <p class="h5">Dr Anam Aftab</p>
                    <p class="fs-6">
                        BAMS, MD (Ay.) - IMS BHU, Gold Medalist<br />Regd:
                        NR/AY/UP/0024989<br/>
                        <span class="text-success">dranamaftab.bhu@gmail.com<br />+91 80098 58057</span>
                    </p>
                </div>
            </div>
            <!-- Prescription Heading -->
            <div class="row justify-content-center ">
                <div class="col-auto">
                    <p class="h5 text-success">PRESCRIPTION</p>
                </div>
            </div>
            <!-- Patient Details -->
            <div class="row justify-content-center text-center ">
                <div class="col">
                    <p class="h6">
                        <%=
                        caseFile.prescriptionDate.toLocaleDateString('en-IN', {
                        day: '2-digit', month: 'short', year: 'numeric'
                        }).replace(/ /g, '-') %>
                    </p>
                    <p class="text-body-tertiary small">Prescription Date</p>
                </div>
                <div class="col">
                    <p class="h6"><%= patient.firstName %></p>
                    <p class="text-body-tertiary small">First Name</p>
                </div>
                <div class="col">
                    <p class="h6"><%= patient.lastName %></p>
                    <p class="text-body-tertiary small">Last Name</p>
                </div>
                <div class="col">
                    <p class="h6">
                        <%= new Date().getFullYear() -
                        patient.dateOfBirth.getFullYear() + 'y' %>
                    </p>
                    <p class="text-body-tertiary small">Age</p>
                </div>
                <div class="col">
                    <p class="h6"><%= patient.gender %></p>
                    <p class="text-body-tertiary small">Gender</p>
                </div>
            </div>
            <!-- Prescription Details -->
            <!-- Complaint -->
            <div class="row justify-content-center ">
                <div class="col-12">
                    <p class="h5 text-body-tertiary">Chief Complaint</p>
                    <p class="fs-6"><%= caseFile.chiefComplaint %></p>
                </div>
            </div>
            <!-- Symptoms/History -->
            <div class="row justify-content-center ">
                <div class="col-12">
                    <p class="h5 text-body-tertiary">Symptoms / History</p>
                    <p class="fs-6"><%= caseFile.symptomsHistory %></p>
                </div>
            </div>
            <!-- Medications -->
            <div class="row justify-content-center ">
                <div class="col-12">
                    <p class="h5 text-body-tertiary">Medications</p>
                    <% for(var i=0; i<caseFile.prescription.length; i++) {%>
                        <div class="row">
                            <div class="col">
                                <%= caseFile.prescription[i].medicine %>
                            </div>
                            <div class="col">
                                <span class="text-success strong"><%= caseFile.prescription[i].dosage %></span>
                            </div>
                            <div class="col">
                                <%= caseFile.prescription[i].duration%> days
                            </div>
                        </div>
                    <% } %>
                    <br/>
                </div>
            </div>
            <!-- Diagnostics -->
            <div class="row justify-content-center ">
                <div class="col-12">
                    <p class="h5 text-body-tertiary">Diagnostics</p>
                    <% for(var i=0; i<caseFile.prescription.length; i++) {%>
                        <div class="row">
                            <div class="col">
                                <%= caseFile.diagnosticTests[i] %>
                            </div>
                        </div>
                    <% } %>
                    <br/>
                </div>
            </div>
            <!-- Recommendations -->
            <div class="row justify-content-center ">
                <div class="col-12">
                    <p class="h5 text-body-tertiary">Recommendations</p>
                    <p class="fs-6"><%= caseFile.recommendations %></p>
                </div>
            </div><br/>
            <div class="row justify-content-center ">
                <div class="col-auto">
                    <span class="fs-6 text-success small">This prescription was electronically generated on <%= new Date().toLocaleDateString('en-IN', { weekday: 'long', day: '2-digit', month: 'short', year: 'numeric' }) %> | <%=new Date().toLocaleTimeString()%></span>
                </div>
            </div>
        </div>
        <!-- Boot Strap Scripts -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
