<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/header'); %>
    <body class="bg-light">
        <%- include('./partials/nav'); %>
        <div class="container max-width: 800px;">
            <br />
            <div class="row">
                <!-- Card 1: Total number of patients -->
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="card-title"><%= data.patients %></h1>
                            <h5 class="card-title">Total Patients</h5>
                            <% if (data.percentageIncrease > 0) { %>
                            <p class="text-success">
                                <%= data.percentageIncrease %>% monthly increase
                            </p>
                            <%} else { %>
                            <p class="text-danger">
                                <%= data.percentageIncrease %>% monthly decrease
                            </p>
                            <% } %>
                            <a href="/patients" class="btn btn-primary"
                                >View All Patients</a
                            >
                        </div>
                    </div>
                </div>
                <!-- Card 2: Total number of cases -->
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="card-title"><%= data.allCases %></h1>
                            <h5 class="card-title">All Cases</h5>
                            <p class="text-info-emphasis">
                                <%= data.newCases %> New Cases
                            </p>
                            <a href="/cases/recent" class="btn btn-primary"
                                >View New Cases</a
                            >
                        </div>
                    </div>
                </div>
                <!-- Card 3: Patient Split -->
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="card-title">
                                <%= data.femalePatients %>
                            </h1>
                            <h5 class="card-title">Female Patients</h5>
                            <p class="text-success">
                                <%= data.pcFemalePatients%>% of All patients
                            </p>
                            <a href="/patients/female" class="btn btn-primary"
                                >View Female Patients</a
                            >
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row justify-content-center">
                <div class="col"><p class="fs-2 text">New Case</p></div>
            </div>
            <div class="row">
                <form action="/cases/new" method="GET">
                    <div class="row">
                        <div class="col-4">
                            <label for="phone" class="form-label"
                                >Patient's Mobile Number:</label
                            >
                            <input
                                type="tel"
                                id="phone"
                                name="phone"
                                class="form-control"
                                pattern="[0-9]{10}"
                                placeholder="9876543210"
                                required
                            />
                            <br />
                        </div>
                    </div>
                    <input
                        type="submit"
                        value="Create New Case"
                        class="btn btn-primary"
                    />
                </form>
            </div>
        </div>
        <!-- Footer -->
        <%- include('./partials/footer'); %>
        <!-- Boot Strap Scripts -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
