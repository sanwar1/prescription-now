<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/header'); %>
    <body class="bg-light">
        <%- include('./partials/nav'); %>
        <div class="container max-width: 800px;">
            <br />
            <div class="row justify-content-center">
                <div class="col-auto">
                    <br />
                    <i
                        class="bi bi-file-earmark-plus text-success"
                        style="font-size: 100px"
                    ></i>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-auto">
                    <p class="fs-2 text">Patient File</p>
                </div>
            </div>
            <!-- Patient Details -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">Patient Details</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title">
                                        <%= patient.firstName %>
                                    </h5>
                                    <p class="text-body-tertiary">First Name</p>
                                </div>
                                <div class="col">
                                    <h5 class="card-title">
                                        <%= patient.lastName %>
                                    </h5>
                                    <p class="text-body-tertiary">Last Name</p>
                                </div>
                                <div class="col">
                                    <h5 class="card-title">
                                        <%= new Date().getFullYear() -
                                        patient.dateOfBirth.getFullYear() + 'y'
                                        %>
                                    </h5>
                                    <p class="text-body-tertiary">Age</p>
                                </div>
                                <div class="col">
                                    <h5 class="card-title">
                                        <%= patient.gender %>
                                    </h5>
                                    <p class="text-body-tertiary">Gender</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <h6 class="card-title">
                                        <%= patient.phoneNumber %>
                                    </h6>
                                    <p class="text-body-tertiary">Phone</p>
                                </div>
                                <div class="col-6">
                                    <h6 class="card-title">
                                        <%= patient.email %>
                                    </h6>
                                    <p class="text-body-tertiary">Email</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <!-- Action Buttons -->
            <div class="row justify-content-center">
                <div class="col">
                    <a
                        class="btn btn-primary"
                        href="/patients/<%= patient.id%>/edit"
                        role="button"
                        >Edit Case File</a
                    >
                    <button
                        type="button"
                        class="btn btn-outline-danger"
                        data-bs-toggle="modal"
                        data-bs-target="#exampleModal"
                    >
                        Delete Case File
                    </button>

                    <!-- Modal -->
                    <div
                        class="modal fade"
                        id="exampleModal"
                        tabindex="-1"
                        aria-labelledby="exampleModalLabel"
                        aria-hidden="true"
                    >
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1
                                        class="modal-title fs-5"
                                        id="exampleModalLabel"
                                    >
                                        Are you sure?
                                    </h1>
                                    <button
                                        type="button"
                                        class="btn-close"
                                        data-bs-dismiss="modal"
                                        aria-label="Close"
                                    ></button>
                                </div>
                                <div class="modal-body">
                                    Once deleted, the case file cannot be
                                    retrieved. Are you sure you want to delete
                                    the case file?
                                </div>
                                <div class="modal-footer">
                                    <button
                                        type="button"
                                        class="btn btn-secondary"
                                        data-bs-dismiss="modal"
                                    >
                                        Cancel
                                    </button>
                                    <a
                                        class="btn btn-danger"
                                        href="/patients/<%= patient.id%>/delete"
                                        role="button"
                                        >Delete Case File</a
                                    >
                                    <!-- <button type="button" class="btn btn-danger">Delete Case Record</button> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />

        <!-- Boot Strap Scripts -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"
        ></script>
    </body>
    <!-- Footer -->
    <%- include('./partials/footer'); %>
</html>
