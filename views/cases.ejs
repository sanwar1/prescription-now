<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header'); %>
  <body class="bg-light">
    <%- include('./partials/nav'); %>
    <div class="container max-width: 800px;">
      <br />
      <div class="row justify-content-center">
        <div class="col-auto">
          <br />
          <i
            class="bi bi-postcard-heart text-success"
            style="font-size: 100px"
          ></i>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-auto"><p class="fs-2 text">Case Files</p></div>
      </div>
      <div class="row">
        <div class="col-12">
          <table class="table table-striped" style="table-layout: fixed;">
            <thead class="table-dark">
              <tr>
                <th scope="col">Date</th>
                <th scope="col">Complaint</th>
                <th scope="col">History</th>
                <!-- <th scope="col" >Complaint</th> -->
                <!-- <th scope="col">Prescription</th>
                <th scope="col">Tests</th> -->
                <th scope="col">View</th>
                <th scope="col">Edit</th>
                <!-- <th scope="col">Delete</th> -->
              </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<cases.length; i++) {%>
                    <tr>
                        <td scope = "row"><%= cases[i].prescriptionDate.toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }).replace(/ /g, '-') %></td>
                        <td class="text-truncate"><%= cases[i].complaintAndSymptoms %></td>
                        <td class="text-truncate"><%= cases[i].patientHistory %></td>
                        <!-- <td><%= cases[i].chiefComplaint %></td> -->
                        <!-- <td><%= cases[i].email %></td> -->
                        <td>
                            <a
                              href="/cases/<%= cases[i]._id%>"
                              class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                              >View</a
                            >
                        </td>
                        <td>
                            <a
                              href="/cases/<%= cases[i]._id%>/edit"
                              class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                              >Edit</a
                            >
                        </td>
                    </tr>
                 <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!-- Footer -->
    <%- include('./partials/footer'); %>
    <!-- Boot Strap Scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
